@using MyEverNote.WebApp.ViewModels
@model  InfoViewModel

@{
    ViewBag.Title = Model.Title;
}


<link href="~/Content/login-register.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">@Model.Header </h1>
                </div>
                <div class="main-content">

                    <div class="text-danger">
                        <h2><span class="glyphicon glyphicon-info-sign"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                        <hr />
                        <p class="text-justify">
                            @foreach (string msg in Model.Items)
                            {
                                @msg <br>
                            }
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </section>
}
@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        //js = "setTimeout(function () {window.location = '" + @Model.RedirectingUrl + "; }, 10000);" + Model.RedirectingTimeOut + ")";
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeOut + ");";

    }
}


@*Login sayfasındayken Footeri gizlemem lazım Jquery ile araştır.*@
<script>
    $(function () {


      @Html.Raw(js);

    });

</script>

